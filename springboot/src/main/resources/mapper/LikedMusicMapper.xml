<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.LikedMusicMapper">

    <select id="selectMusicByUserId" resultType="com.example.vo.MusicVo">
        SELECT
            m.*,
            TRUE AS isLiked
        FROM music m
        WHERE m.id IN (
            SELECT music_id FROM liked_music WHERE user_id = #{userId}
        )

    </select>
</mapper>